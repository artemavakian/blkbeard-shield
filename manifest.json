{
  "manifest_version": 3,
  "name": "blkbeard",
  "version": "1.0.1",
  "description": "The first ad blocker built to handle streaming/high-risk sites.",
  "permissions": ["tabs", "scripting", "activeTab", "storage", "webNavigation"],
  "host_permissions": [
    "<all_urls>",
    "https://api.blkbeard.ai/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "blkbeardicon.png",
      "48": "blkbeardicon.png",
      "128": "blkbeardicon.png"
    }
  },
  "icons": {
    "16": "blkbeardwhite.png",
    "48": "blkbeardwhite.png",
    "128": "blkbeardwhite.png"
  }
}


